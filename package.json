{
    "name": "template",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc -b && vite build",
        "preview": "vite preview",
        "prepare": "husky"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
        }
    },
    "lint-staged": {
        "*.{js,mjs,ts,tsx,vue}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,json5,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.0.17",
        "tailwindcss": "^4.0.17",
        "vue": "^3.5.13",
        "vue-i18n": "^11.1.2",
        "vue-router": "^4.5.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@tailwindcss/language-server": "^0.14.11",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vitejs/plugin-vue-jsx": "^4.1.2",
        "@vue/language-server": "^2.2.8",
        "@vue/tsconfig": "^0.7.0",
        "commitizen": "^4.3.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-vue": "^10.0.0",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "prettier": "^3.5.3",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.28.0",
        "vite": "^6.2.0",
        "vscode-langservers-extracted": "^4.10.0",
        "vue-tsc": "^2.2.4"
    }
}
